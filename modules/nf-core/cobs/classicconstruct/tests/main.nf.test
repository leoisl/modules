nextflow_process {
    name "Test Process COBS_CLASSICCONSTRUCT"
    script "../main.nf"
    process "COBS_CLASSICCONSTRUCT"

    tag "modules"
    tag "modules_nfcore"
    tag "cobs"
    tag "cobs/classicconstruct"

    test("sarscov2 - genome - fasta") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert process.out.index != null },
                { assert process.out.index.get(0).get(1) ==~ ".*/index.cobs_classic" },
                { assert snapshot(process.out.index).match("index")},
                { assert snapshot(process.out.versions).match("versions") }
            )
        }
    }
}
